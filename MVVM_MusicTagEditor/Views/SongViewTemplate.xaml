<UserControl x:Class="MVVM_MusicTagEditor.Views.SongViewTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM_MusicTagEditor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="stackP">
    <Grid>
        <Button Margin="20" Background="#3333" BorderThickness="0" Content="Select Directory" Foreground="White" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                Height="{Binding ElementName=stackP, Path=ActualHeight}" Command="{Binding ChooseDirectoryCommand}"></Button>
    </Grid>
</UserControl>
